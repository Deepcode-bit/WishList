<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/wish_detail_layout"
    android:elevation="1dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:padding="25dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rippler_blue"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:focusable="true">
    <LinearLayout
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/saved_num"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="¥2,000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/font_color_2"
            android:textSize="18sp"
            android:text="已存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/progress_text"
            android:textColor="@color/font_color_1"
            android:text="50%"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <SeekBar
        android:id="@+id/seek_bar"
        android:maxHeight="5dp"
        android:thumb="@color/light_pink"
        android:progress="50"
        android:progressDrawable="@drawable/seek_bar_bg2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/target_num"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="¥3,900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/font_color_2"
            android:textSize="18sp"
            android:text="目标"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>